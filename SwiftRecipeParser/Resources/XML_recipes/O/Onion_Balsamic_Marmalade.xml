            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>Spanish onion, chopped into medium dice</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>tbsp</unitOfMeasure>
            <ingredientName>sugar</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
