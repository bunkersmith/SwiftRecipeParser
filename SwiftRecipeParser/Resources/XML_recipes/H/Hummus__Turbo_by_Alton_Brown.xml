            <quantity>3</quantity>
            <unitOfMeasure>tbsp</unitOfMeasure>
            <ingredientName>sesame tahini</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>handful</unitOfMeasure>
