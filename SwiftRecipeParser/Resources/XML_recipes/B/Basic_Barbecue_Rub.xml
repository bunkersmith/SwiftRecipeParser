            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Brown Sugar, firmly packed</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Sweet Paprika</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>3</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Black Pepper</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>3</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Coarse Salt</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Hickory-Smoked Salt</ingredientName>
            <processingInstructions></processingInstructions>
