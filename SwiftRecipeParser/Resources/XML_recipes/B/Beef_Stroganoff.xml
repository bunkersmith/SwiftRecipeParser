            <ingredientName>vegetable oil</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2-1/2</quantity>
            <unitOfMeasure>lb</unitOfMeasure>
            <ingredientName>beef tenderloin, thinly sliced</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>kosher salt</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
