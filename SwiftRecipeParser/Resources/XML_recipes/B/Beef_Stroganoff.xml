            <quantity>1</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>freshly ground black pepper</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>tb</unitOfMeasure>
