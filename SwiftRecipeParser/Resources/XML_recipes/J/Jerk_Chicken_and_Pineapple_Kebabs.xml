            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>dark rum</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
