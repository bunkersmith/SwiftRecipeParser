            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/4</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>good olive oil</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>kosher salt</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>freshly ground black pepper</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>minced garlic</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/4</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>ground cayenne pepper</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>ripe Hass avocados, seeded, peeled, and 1/2-inch diced</ingredientName>
