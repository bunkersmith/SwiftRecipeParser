        <ingredient>
            <quantity>6</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>fresh baby spinach leaves</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>5-oz</unitOfMeasure>
            <ingredientName>sea bass fillets</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>fresh ginger, peeled and minced</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>minced garlic</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>dry Marsala wine</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2-2/3</quantity>
            <unitOfMeasure>tb</unitOfMeasure>
            <ingredientName>soy sauce</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
