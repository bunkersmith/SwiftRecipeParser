            <quantity>2</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Smart Balance Light Butter Spread</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>canola oil</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>3</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>Large Spanish onions, peeled, halved and thinly sliced</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>kosher salt</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/4</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>freshly ground black pepper</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
    </ingredients>
</recipe>
