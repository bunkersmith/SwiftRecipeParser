        <ingredient>
            <quantity>3</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>vegetable oil, 3 turns of the pan</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>tsp</unitOfMeasure>
            <ingredientName>crushed red pepper flakes</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>cloves garlic, chopped</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>in</unitOfMeasure>
            <ingredientName>ginger root, peeled and cut into very thin matchsticks or grated</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>lb</unitOfMeasure>
            <ingredientName>shiitake mushroom caps, sliced, a couple of cups</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>medium bok choy, trimmed and cut into 3-inch pieces, then cut sticks lengthwise</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>0</quantity>
            <unitOfMeasure>-</unitOfMeasure>
