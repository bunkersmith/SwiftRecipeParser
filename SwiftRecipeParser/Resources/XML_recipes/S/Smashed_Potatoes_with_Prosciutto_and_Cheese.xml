            <quantity>3</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>large russet potatoes, peeled and chopped</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>oz</unitOfMeasure>
            <ingredientName>prosciutto, finely chopped</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>grated Parmigiano-Reggiano</ingredientName>
