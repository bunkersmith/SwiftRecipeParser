            <quantity>1-1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>heavy cream</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>sprig</unitOfMeasure>
            <ingredientName>fresh thyme</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>garlic cloves, chopped</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>tsp</unitOfMeasure>
            <ingredientName>ground nutmeg</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>0</quantity>
            <unitOfMeasure>-</unitOfMeasure>
            <ingredientName>butter</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>lb</unitOfMeasure>
            <ingredientName>russet potatoes, peeled and cut into 1/8-inch thick slices</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>0</quantity>
            <unitOfMeasure>-</unitOfMeasure>
            <ingredientName>Salt and freshly ground black pepper</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>grated Parmesan, plus more for broiling</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
    </ingredients>
</recipe>
