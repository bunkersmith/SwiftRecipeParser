        </ingredient>
        <ingredient>
            <quantity>4</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>cloves garlic, finely minced</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>tbsp</unitOfMeasure>
