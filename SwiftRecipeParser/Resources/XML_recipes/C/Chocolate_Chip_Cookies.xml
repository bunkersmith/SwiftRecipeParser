<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <name>Chocolate Chip Cookies</name>
    <indexCharacter>C</indexCharacter>
    <notes></notes>
    <servings>4</servings>
    <instructions>Cream shortening, sugars, egg and vanilla until light and fluffy. Sift together dry ingredients; stir into creamed mixture; blend well. Add chocolate chips. Drop from teaspoon 2 inches apart on a greased cookie sheet. Bake in a 375 degree oven for 10 to 12 minutes. Remove from sheet immediately. Makes 3 dozen.</instructions>
    <ingredients>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>Shortening</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>Granulated Sugar</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/4</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>Brown Sugar</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>Egg</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>Vanilla</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>All-Purpose Flour, Sifted</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>3/4</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>Salt</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>ts</unitOfMeasure>
            <ingredientName>Baking Soda</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>6</quantity>
            <unitOfMeasure>oz</unitOfMeasure>
            <ingredientName>Semisweet Chocolate Chips</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
    </ingredients>
</recipe>
