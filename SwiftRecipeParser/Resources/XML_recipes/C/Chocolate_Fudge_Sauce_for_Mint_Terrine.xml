<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <name>Chocolate Fudge Sauce for Mint Terrine</name>
    <indexCharacter>C</indexCharacter>
    <notes></notes>
    <servings>8</servings>
    <instructions>In the top of a double boiler, melt chocolate chips and butter over simmering water. When chocolate begins to melt, whisk in heavy cream and water. Remove from heat when smooth, and stir in the orange liqueur. Serve sauce either warm or at room temperature.</instructions>
    <ingredients>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>semisweet chocolate chips</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>bittersweet chocolate chips</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>tb</unitOfMeasure>
            <ingredientName>unsalted butter</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>heavy cream</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>tb</unitOfMeasure>
            <ingredientName>Water</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>tb</unitOfMeasure>
            <ingredientName>orange liqueur</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
    </ingredients>
</recipe>
