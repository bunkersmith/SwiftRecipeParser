        <ingredient>
            <quantity>8</quantity>
            <unitOfMeasure>oz</unitOfMeasure>
            <ingredientName>cream cheese, room temperature</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/3</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>sugar</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>eggs</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>tsp</unitOfMeasure>
            <ingredientName>lemon juice</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1/4</quantity>
            <unitOfMeasure>tsp</unitOfMeasure>
            <ingredientName>lemon zest</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>tsp</unitOfMeasure>
            <ingredientName>vanilla</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>half and half</ingredientName>
