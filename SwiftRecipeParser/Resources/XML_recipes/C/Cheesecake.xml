            <quantity>1-1/2</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>Graham Cracker Crumbs</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>2</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Sugar</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>3</quantity>
            <unitOfMeasure>T</unitOfMeasure>
            <ingredientName>Butter, Melted</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1-1/4</quantity>
            <unitOfMeasure>lb</unitOfMeasure>
            <ingredientName>Cream Cheese</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>c</unitOfMeasure>
            <ingredientName>Sugar</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1-1/2</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>Vanilla Extract</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>3</quantity>
            <unitOfMeasure>ea</unitOfMeasure>
            <ingredientName>Eggs</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
    </ingredients>
</recipe>
