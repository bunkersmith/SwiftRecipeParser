            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1-3/4</quantity>
            <unitOfMeasure>oz</unitOfMeasure>
            <ingredientName>sugar, approximately 3 tablespoons</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1-1/2</quantity>
            <unitOfMeasure>oz</unitOfMeasure>
            <ingredientName>cocoa powder, approximately 1/2 cup</ingredientName>
            <processingInstructions></processingInstructions>
        </ingredient>
        <ingredient>
            <quantity>1</quantity>
            <unitOfMeasure>t</unitOfMeasure>
            <ingredientName>baking powder</ingredientName>
            <processingInstructions></processingInstructions>
